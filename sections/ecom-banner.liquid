<section class="ecom-banner">
  <!-- Header Section -->
  <div class="ecom-header">
    <!-- mobile hamburger menu -->
    <div class="mobile-menu-btn">
      <span></span>
      <span></span>
      <span></span>
    </div>

    <div class="ecom-header-logo">
      <span class="brand-text">
        {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | image_url }}" alt="Logo">
        {% else %}
          <span>{{ shop.name }}</span>
        {% endif %}
      </span>
    </div>
    <div class="ecom-header-tagline desktop-only">
      <span>{{ section.settings.tagline }}</span>
    </div>
    <div class="ecom-header-button desktop-only">
      <a href="{{ section.settings.button_url }}" class="ecom-header-button-link">
        {{ section.settings.button_text }}
        {% render 'icon-arrow-right'
          , color: '#000' %}
      </a>
    </div>
  </div>

  <!-- Mobile Content Section - Only visible in mobile -->
  <div class="mobile-only">
    <div class="mobile-content">
      <h1 class="main-title">The Gift Guide</h1>
      <p class="main-subtitle">Discover Joy: Your Ultimate Holiday Gift Destination.</p>
    </div>
  </div>


  <!-- Main Content -->
  <div class="ecom-content" style="background-image: url('{{ section.settings.main_banner | image_url }}');">
    <div class="content-text desktop-only">
      <h1 class="main-title">{{ section.settings.main_title }}</h1>
      <p class="main-subtitle">{{ section.settings.main_subtitle }}</p>
      <a href="{{ section.settings.main_button_url }}" class="ecom-content-button">
        {{ section.settings.main_button_text }}
        {% render 'icon-arrow-right'
          , color: '#fff' %}
      </a>
    </div>

    <div class="mobile-banner-button mobile-only">
      <a href="#" class="mobile-banner-button-link">
        Shop Now
        {% render 'icon-arrow-right'
          , color: '#fff' %}
      </a>
    </div>
  </div>

  <!-- Footer Section -->
  <div class="ecom-footer">
    <div class="ecom-footer-content">
      <p>{{ section.settings.footer_text }}</p>
    </div>
  </div>
</section>
<style>
  .ecom-banner {
    font-family: 'Jost'
    , sans-serif;
    color: "#000";
    width: 100%;
    height: 100vh;
  }

  /* Header Section */
  .ecom-header {
    background-color: #F5F5F5;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 50px;
    border-bottom: 1px solid #E0E0E0;
  }

  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    gap: 4px;
    padding: 10px;
  }

  .mobile-menu-btn span {
    width: 20px;
    height: 2px;
    background: #000;
    transition: all 0.3s ease;
  }

  .ecom-header-logo .brand-text {
    font-size: 18px;
    font-weight: 700;
    letter-spacing: 1px;
    color: #000;
    vertical-align: text-top;
  }

  .ecom-header-tagline {
    flex: 1;
    text-align: center;
    margin: 0 20px;
  }

  .ecom-header-tagline span {
    font-size: 16px;
    font-weight: 400;
    color: #000;
  }

  .ecom-header-button-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 42px;
    background: linear-gradient(to right, #000 50%, #FFD700 50%);
    background-size: 200% 100%;
    background-position: right bottom;
    color: #000;
    text-decoration: none;
    font-size: 16px;
    font-weight: 400;
    letter-spacing: 1px;
    border-radius: 4px;
    text-transform: uppercase;
    transition: all 0.3s ease-out;
  }

  .ecom-header-button-link svg {
    transition: all 0.3s ease;
    stroke: #000;
  }

  .ecom-header-button-link:hover {
    background-position: left bottom;
    color: #fff;
    fill: #fff;
  }

  .ecom-header-button-link:hover svg {
    transform: translateX(3px);
    stroke: #fff;
    fill: #fff;
    transition: all 0.3s ease-out;
  }

  /** Mobile responsive and other css **/
  .mobile-only {
    display: none;
    text-align: center;
  }

  /** main content **/
  .ecom-content {
    position: relative;
    min-height: calc(100vh - 120px);
    background-color: #fff;
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
    padding: 60px 80px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .content-text {
    position: relative;
    z-index: 1;
    max-width: 600px;
  }

  .ecom-content-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 42px;
    background: linear-gradient(to right, #FFD700 50%, #000 50%);
    background-size: 200% 100%;
    background-position: right bottom;
    color: #fff;
    text-decoration: none;
    font-size: 16px;
    font-weight: 400;
    letter-spacing: 1px;
    border-radius: 4px;
    text-transform: uppercase;
    transition: all 0.3s ease-out;
  }

  .ecom-content-button:hover {
    background-position: left bottom;
    color: #000;
  }

  .ecom-content-button:hover svg {
    transform: translateX(3px);
    stroke: #000;
    fill: #000;
    transition: all 0.3s ease-out;
  }

  .main-title {
    font-size: 70px;
    font-weight: 500;
    color: #000;
    marging: 0 0 25px 0;
    line-height: 1.2;
  }

  .main-subtitle {
    font-size: 18px;
    font-weight: 400;
    color: #000;
    margin: 0 0 35px;
    line-height: 1.5;
    max-width: 500px;
  }

  .mobile-banner-button-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 42px;
    background: linear-gradient(to right, #FFD700 50%, #000 50%);
    background-size: 200% 100%;
    background-position: right bottom;
    color: #fff;
    text-decoration: none;
    font-size: 16px;
    font-weight: 400;
    letter-spacing: 1px;
    border-radius: 4px;
    transition: all 0.3s ease-out;
  }

  .mobile-banner-button {
    position: absolute;
    bottom: 150px;
    left: 50%;
    width: 100%;
    padding: 0 80px;
    transform: translateX(-50%);
  }

  .ecom-footer {
    background-color: #f5f5f5;
    padding: 10px;
    text-align: center;
    border-top: 1px solid #e0e0e0;
  }
  .ecom-footer p {
    font-size: 14px;
    font-weight: 400;
    color: #000;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }


  @media screen and (max-width: 768px) {
    .ecom-banner {
      height: 71vh;
    }
    .ecom-content {
      min-height: calc(50vh - 100px);
      background-size: auto;
    }
    .mobile-banner-button {
      bottom: 30px;
    }
    .ecom-header {
      padding: 12px 20px;
      justify-content: space-between;
    }
    .desktop-only {
      display: none;
    }
    .mobile-menu-btn {
      display: flex;
      order: 1;
    }
    .ecom-header-logo {
      order: 2;
      flex: 1;
      text-align: center;
    }
    .mobile-only {
      display: block;
    }
    .main-title {
      font-size: 30px;
    }
    .main-subtitle {
      font-size: 16px;
    }
    .mobile-content {
      padding: 0 20px;
    }
  }
</style>

