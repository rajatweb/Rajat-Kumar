<script>
  document.addEventListener('DOMContentLoaded', function() {
    /**
      Product Modal
      - Get Modal, Close and Hotspot marker
    **/
    const productModal = document.getElementById('productModal');
    const productModalClose = document.getElementById('productModalClose');
    const hotspotMarkers = document.querySelectorAll('.hotspot-marker');
    const productFormButton = document.getElementById('productFormButton');
    /**
      Current Product and Selected Variant
      - Based on selection set currentProduct and selectedVariant
      - Onclick on hostspot marker we will know which product is cliked and 
      - retrieve all the data set values (using this pointer) to get all the data values
    **/
    let currentProduct = null;
    let selectedVariant = null;


    hotspotMarkers.forEach(marker => {
      marker.addEventListener('click', function() {
        openProductModal(this); // this refer to current clicked button and it's element properties
      });
    });

    productModalClose.addEventListener('click', function(e) {
        e.preventDefault();
      productModal.classList.remove('active');
      document.body.style.overflow = 'auto';
    });

    /**
      Close Product Modal
      - Remove active class from product modal
      - Restore body overflow
    **/
    function closeProductModal() {
        productModal.classList.remove('active');
        document.body.style.overflow = 'auto';
    }

    /**
      Open Product Modal
      - Get product data from dataset values
      - Set currentProduct and selectedVariant
      - Set product modal image, title, price, description
      - Generate option selectors
    **/
    function openProductModal(marker) {
        const productData = {
            id: marker.dataset.productId,
            title: marker.dataset.productTitle,
            price: marker.dataset.productPrice,
            image: marker.dataset.productImage,
            description: marker.dataset.productDescription,
            variants: JSON.parse(marker.dataset.productVariants),
            options: JSON.parse(marker.dataset.productOptions),
        }

        console.log('product data', productData);

        currentProduct = productData;
        selectedVariant = productData.variants[0];

        document.getElementById('productModalImage').src = productData.image;
        document.getElementById('productModalTitle').innerHTML = productData.title;
        document.getElementById('productModalPrice').innerHTML = productData.price;
        document.getElementById('productModalDescription').innerHTML = productData.description;
    
        // generate option selector
        generateOptionSelectors(productData.options, productData.variants);

        productModal.classList.add('active');
        document.body.style.overflow = 'hidden';
    }

    /**
      Generate Option Selectors
      - Generate option selectors for color and size
      - Generate option selectors for color and size
    **/
    function generateOptionSelectors(options, variants) {
        const optionsContainer = document.getElementById('productOptions');
        optionsContainer.innerHTML = '';

        const orderedOptions = [...options].sort(); // sort options alphabetically

        orderedOptions.forEach((option, index) => {
            const optionGroup = document.createElement('div');
            optionGroup.className = 'option-group';
            const optionAutoIndex = index;


            /**
              Options element
              - create element and label
              - filter all unique values from option colorFilters and sizeFilters
              - based on filterd value create buttons or select element
            **/

            if (option.toLowerCase() === 'color') { // if option is color
                const buttonContainer = document.createElement('div');
                buttonContainer.className = 'button-container';
                const colorFilters = [];

                const label = document.createElement('label');
                label.className = 'option-label';
                label.innerHTML = 'Color';
                optionGroup.appendChild(label);

                variants.forEach(variant => {
                    const colorValue = variant[`option${options.indexOf(option) + 1}`];
                    if (!colorFilters.includes(colorValue)) {
                    colorFilters.push(colorValue);
                    }
                });

                colorFilters.forEach((color, index) => {
                    const button = document.createElement('button');
                    button.type = 'button';
                    button.className = 'color-button '+color;
                    // button.style.borderColor = color;
                    // button.style.borderLeftWidth = '2px';
                    button.style.borderLeft = '4px solid ' + color;
                    button.style.background = 'linear-gradient(to right, #000 50%, #FFD700 50%);';
                    button.style.backgroundSize = '200% 100%';
                    button.style.backgroundPosition = 'right bottom';
                    button.style.transition = 'all 0.3s ease-out';

                    button.textContent = color;
                    button.dataset.optionIndex = index;
                    button.dataset.optionValue = color;

                    if (color === variants[0].option2) {
                        selectedVariant = variants[0]; // set selected variant to first variant
                        button.classList.add('selected');
                    }

                    button.addEventListener('click', function () {
                        buttonContainer.querySelectorAll('.color-button').forEach(btn => {
                            btn.classList.remove('selected');
                        });
                        button.classList.add('selected');

                        updateSelectedVariant();
                    });

                    buttonContainer.appendChild(button);
                });

                optionGroup.appendChild(buttonContainer);

            } else if (option.toLowerCase() === 'size') { // if option is size
                const selectContainer = document.createElement('div');
                selectContainer.className = 'select-container';
                const sizeFilters = [];

                const label = document.createElement('label');
                label.className = 'option-label';
                label.innerHTML = 'Size';
                optionGroup.appendChild(label);

                variants.forEach(variant => {
                    const sizeValue = variant[`option${options.indexOf(option) + 1}`];
                    if (!sizeFilters.includes(sizeValue)) {
                    sizeFilters.push(sizeValue);
                    }
                });

                const select = document.createElement('select');
                select.name = 'size-select';
                select.className = 'size-select';
                select.dataset.optionIndex = optionAutoIndex;
                
                
                const placeholderOption = document.createElement('option');
                placeholderOption.value = '';
                placeholderOption.textContent = 'Choose your size';
                placeholderOption.disabled = true;
                placeholderOption.selected = true;
                select.appendChild(placeholderOption);

                sizeFilters.forEach((size, index) => {
                    const optionElement = document.createElement('option');
                    optionElement.value = size;
                    optionElement.textContent = size;
                    optionElement.dataset.optionIndex = index;
                    optionElement.dataset.optionValue = size;
                    select.appendChild(optionElement);
                });

                select.addEventListener('change', function() {
                    updateSelectedVariant();
                });

                selectContainer.appendChild(select);
                optionGroup.appendChild(selectContainer);
            }

            optionsContainer.appendChild(optionGroup);
        });
    }


    /**
      Update Selected Variant
      - Update selected variant based on size and color
    **/
    function updateSelectedVariant() {
       const selectedOptions = [];

       const sizeSelect = document.querySelector('.size-select');
       if (sizeSelect && sizeSelect.value) {
        selectedOptions[0] = sizeSelect.value;
       }

       const colorButton = document.querySelector('.color-button.selected');
        if (colorButton) {
            selectedOptions[1] = colorButton.dataset.optionValue;
        }


        const matchingVariant = currentProduct.variants.find(variant => {
            return variant.options.every((option, index) => {
                return selectedOptions[index] === option;
            });
        });

        if (matchingVariant) {
            selectedVariant = matchingVariant;

            document.getElementById('productId').value = selectedVariant.id;

            const formattedPrice = `$${(selectedVariant.price / 100).toFixed(2)}`;

            document.getElementById('productModalPrice').innerHTML = formattedPrice;
        }       
    }

    /**
      Add to cart
      - Add to cart based on selected variant
    **/
    productForm.addEventListener('submit', async function(e) {
        e.preventDefault();

        if(!selectedVariant) {
            alert('Please select a variant');
            return;
        }

        if(document.getElementById('productId').value === '') {
            alert('Please select a size');
            return;
        }

        const formData = new FormData();
        formData.append('id', selectedVariant.id);
        formData.append('quantity', 1);

        // fetch('/cart/add.js', {
        //     method: 'POST',
        //     body: formData
        // })
        //   .then((response) => response.json())
        //   .then((response) => {
        //       console.log(response);
        //       closeProductModal();
        //   })
        //   .catch((error) => {
        //     console.error(error);
        //   });

        try {
            productFormButton.innerHTML = 'Adding to cart...';
            productFormButton.classList.add('disabled');
            productFormButton.disabled = true;
            // Add item to cart
            const addResponse = await fetch('/cart/add.js', {
                method: 'POST',
                body: formData
            });
            const addData = await addResponse.json();

            // Get updated cart data
            const cartResponse = await fetch('/cart.json');
            const cartData = await cartResponse.json();

            // Update cart count in header
            const cartCountElement = document.getElementById('cart-icon-bubble');
            const cartCountBubbleElement = cartCountElement.querySelector('.cart-count-bubble');

            if (cartCountBubbleElement) {
                const visibleCount = cartCountBubbleElement.querySelector('span[aria-hidden="true"]');
                const hiddenCount = cartCountBubbleElement.querySelector('.visually-hidden');
                console.log('visibleCount', visibleCount);
                
                visibleCount.textContent = cartData.item_count;
                hiddenCount.textContent = `${cartData.item_count} item${cartData.item_count > 1 ? 's' : ''}`;
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }

            closeProductModal();
            productFormButton.innerHTML = 'Add to Cart';
            productFormButton.classList.remove('disabled');
            productFormButton.disabled = false;

        } catch (error) {
            console.error('Error:', error);
            productFormButton.innerHTML = 'Add to Cart';
            productFormButton.classList.remove('disabled');
            productFormButton.disabled = false;
        }

    });

  });
</script>
